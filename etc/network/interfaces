# The loopback network interface
auto lo
iface lo inet loopback

# The primary network interface
iface eth0 inet static
address  192.168.0.XXX # l'adresse ip de votre pc
netmask 255.255.255.0 # le masque de sous-r√©seau
gateway 192.168.0.1 # la passerelle

auto eth0
